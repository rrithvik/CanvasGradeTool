{
  "manifest_version": 2,

  "name": "Canvas Grade Calculator",
  "description": "This extension will calculate grades for you from your canvas page",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/jquery-3.5.1.js","static/js/content.js"]
    }
  ],
  "page_action": {
    "default_icon": "static/images/icon.png",
    "default_popup": "templates/popup.html"
  },
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": false
  },
  "options_page": "templates/options.html",
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": ["templates/table.html"]
}